{
  "name": "acme-wizard-for-console",
  "version": "0.0.3",
  "description": "A Let's Encrypt ACME Wizard for Stella IT Console",
  "main": "dist/",
  "repository": "https://github.com/Stella-IT/acme-wizard-for-console",
  "author": "Alex4386 <alex4386@stella-it.com>",
  "license": "MIT",
  "dependencies": {
    "acme-client": "^4.1.3",
    "axios": "^0.21.1",
    "chalk": "^4.1.1",
    "figlet": "^1.5.0",
    "prompts": "^2.4.1",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.1",
    "@types/node": "^14.14.7",
    "@types/prompts": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "pkg": "^5.2.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0"
  },
  "bin": "dist/index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node16-linux",
      "node16-macos",
      "node16-windows"
    ],
    "outputPath": "build",
    "assets": [
      "node_modules/figlet/fonts/*.flf"
    ]
  },
  "scripts": {
    "debug": "ts-node ./src/",
    "build": "tsc",
    "start": "tsc && node ./dist/",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "pkg": "pkg ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
